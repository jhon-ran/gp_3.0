
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">User </h1>
  </div>
</div>

<div class="card text-center">
  <div class="card-header">
    <h2> <%= @user.first_name %> <%= @user.last_name %></h2>
  </div>
  <div class="card-body">
    <p class="card-text"><strong>age:</strong> <%= @user.age %><br/>
    <strong>City:</strong> <a href="<%= city_path %>"> <%= @user.city.name %> </a> <br/>
    <strong>Description:</strong> <%= @user.description %></p>
  </div>
  <div class="card-footer text-muted">
    <h4> <%= @user.email %> </h4>
  </div>
</div>